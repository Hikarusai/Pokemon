extends ./header
block content
  .formUser
    h1.mt-5 Login
    if errors
      each err in errors
        .alert.alert-danger=err
    form.mt-5( method="POST")
      .form-group
        label(for='email') Email
        input#email.form-control(type='text', placeholder='Email', name='email',value=values?values.email:'')
      .form-group
        label(for='password') Password
        input#password.form-control(type='password', placeholder='Password', name='password',value=values?values.password:'')
      button.btn.btn-primary Login

